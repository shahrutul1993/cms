= form_for ["admin",@page] do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title

  %h3
  Custom fields
  =f.fields_for :fields do |c|
    %p
      =c.label :value, c.object.field_definition.key
      =c.text_field :value
      =c.hidden_field :field_definition_id

  .field
    = f.label :body
    = f.cktext_area :body
  .field
    = f.label :slug
    = f.text_field :slug
  .field
  = f.label :category_id
  = f.select :category_id, Category.all.map {|category| [category.name, category.id]}
  .actions
    =f.hidden_field :type_id
    = f.submit 'Save'
